	editor = nvim
[mergetool "smerge"]
	cmd = smerge mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true
[merge]
	tool = smerge
[core]
	autocrlf = false
	eol = lf
	pager = delta
[interactive]
    diffFilter = delta --color-only
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
[merge]
    conflictstyle = zdiff3
[pull]
	rebase = true
